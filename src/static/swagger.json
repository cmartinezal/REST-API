{
    "openapi": "3.0.3",
    "info": {
        "title": "Superhero API",
        "description": "API to manage Superheroes",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:5000/api/v1"
        }
    ],
    "tags": [
        {
            "name": "superhero",
            "description": "Everything about Superheroes"
        }
    ],
    "paths": {
        "/superheroes": {
            "get": {
                "tags": [
                    "superhero"
                ],
                "summary": "Returns list of superheroes",
                "operationId": "getSuperheroes",
                "description": "Returns list of superheroes",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Superheroes"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage400"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Superheroes not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage404"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage500"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "superhero"
                ],
                "summary": "Create a new superhero",
                "operationId": "postSuperheroes",
                "description": "Creates a new Superhero",
                "requestBody": {
                    "description": "Create a new superhero",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SuperheroName"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Superhero"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage400"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Superhero not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage404"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage500"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/superheroes/{id}": {
            "get": {
                "tags": [
                    "superhero"
                ],
                "summary": "Returns a Superhero by id",
                "operationId": "getSuperheroesId",
                "description": "Returns a Superhero by id",
                "parameters": [
                    {
                        "name": "id",
                        "description": "Superhero id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Superhero"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage400"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Superhero not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage404"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage500"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tags": [
                    "superhero"
                ],
                "summary": "Update a superhero",
                "operationId": "putSuperheroes",
                "description": "Update the name of a superhero",
                "parameters": [
                    {
                        "name": "id",
                        "description": "Superhero id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Update a superhero",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SuperheroName"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Superhero"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage400"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Superhero not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage404"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage500"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "superhero"
                ],
                "summary": "Delete a superhero",
                "operationId": "deleteSuperheroes",
                "description": "Delete a Superhero",
                "parameters": [
                    {
                        "name": "id",
                        "description": "Superhero id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage204"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage400"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Superhero not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage404"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorMessage500"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "SuperheroName": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Superhero name",
                        "example": "Superman"
                    }
                }
            },
            "SuperheroId": {
                "type": "integer",
                "description": "Superhero Id",
                "example": 1
            },
            "ErrorMessage404": {
                "type": "string",
                "description": "Error message",
                "example": "Superhero not found"
            },
            "ErrorMessage400": {
                "type": "string",
                "description": "Error message",
                "example": "Bad Request"
            },
            "ErrorMessage204": {
                "type": "string",
                "description": "Error message",
                "example": "Successful operation"
            },
            "ErrorMessage500": {
                "type": "string",
                "description": "Error message",
                "example": "Server Error"
            },
            "Superpower": {
                "type": "string",
                "description": "Superpower type",
                "example": "Invisibility"
            },
            "Superhero": {
                "type": "object",
                "description": "Superhero data",
                "properties": {
                    "created_date": {
                        "type": "string",
                        "description": "Superhero created date",
                        "example": "2024-04-02 14:27:46"
                    },
                    "id": {
                        "$ref": "#/components/schemas/SuperheroId"
                    },
                    "name": {
                        "type": "string",
                        "description": "Superhero name",
                        "example": "Superman"
                    },
                    "superpowers": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Superpower"
                        },
                        "example": [
                            "Enhanced Strength",
                            "Enhanced Flexibility"
                        ]
                    }
                },
                "example": {
                    "created_date": "2024-04-02 14:27:46",
                    "id": 1,
                    "name": "Ant-Man",
                    "superpowers": [
                        "Enhanced Strength",
                        "Enhanced Flexibility"
                    ]
                }
            },
            "Superheroes": {
                "type": "array",
                "description": "List of Superheroes",
                "items": {
                    "$ref": "#/components/schemas/Superhero"
                },
                "example": [
                    {
                        "created_date": "2024-04-02 14:27:46",
                        "id": 1,
                        "name": "Ant-Man",
                        "superpowers": [
                            "Enhanced Strength",
                            "Enhanced Flexibility"
                        ]
                    },
                    {
                        "created_date": "2024-04-02 14:27:46",
                        "id": 2,
                        "name": "Aquaman",
                        "superpowers": [
                            "Enhanced Speed"
                        ]
                    }
                ]
            }
        }
    }
}